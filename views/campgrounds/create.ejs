<% layout('layouts/boilerplate') %>
   <h1>Create Campground</h1>
   <form action="/campgrounds", method="POST">
      <div 
         class="container" 
         style="
         display: grid;
         grid-template-columns: 200px 200px;
         grid-gap: 5px;">

         <label for="name">Campground Name</label>
         <input type="text" id="name" name="campground[name]">
         <label for="location">Location</label>
         <input type="text" id="location" name="campground[location]">
         <button style="grid-column: span 2; cursor: pointer">Add Campgrounds</button>
      </div>
   </form>
   <footer>
      <a href="/campgrounds">Cancel</a>
   </footer>
